/* pages/group/group.wxss */
.container{
  display: flex;
  height: 1500rpx;
}
.container .search{
  display: flex;
  width: 735rpx;
  height: 65rpx;
  padding: 12.5rpx 0 12.5rpx 15rpx;
  background: #068043;
}
.container .search-left{
  display: inline-block;
  flex: 8;
  background: #269D80;
  text-align: left;
}
.container .search-left input{
  display: inline-block;
  height: 35rpx;
  font-size: 26rpx;
}
.search-placeholder{
  color: #8CCEFD;
  line-height: 20rpx;
}
.container .search .search-left image{
  display: inline-block;
  width: 35rpx;
  height: 35rpx;
  padding: 15rpx 15rpx 15rpx 20rpx;
}
.container .search .search-right{
  flex: 1;
}
.container .search .search-right image{
  width: 45rpx;
  height: 45rpx;
  padding: 10rpx;
}

.container{
  padding: 0;
  font-size: 14rpx;
  background: white;
  color: #000;
}
.v-content {
      box-shadow: 3px 3px 20px  lightgrey;
      border-radius: 4px;

      overflow: hidden;
      position: relative;
      margin: 20rpx;

    }
    .ripple {
      background-color: rgba(0, 0, 0, 0.15);
      border-radius: 100%;
      height: 30px;
      width: 30px;
      position: absolute;
    }

    .ripple2 {
      border-radius: 100%;
      height: 50px;
      width: 50px;
      position: absolute;
     
      
    }



  
    @-webkit-keyframes ripple {
      100% {
        -webkit-transform: scale(15);
        transform: scale(15);
      }
    }
    @keyframes ripple {
      100% {
        -webkit-transform: scale(15);
        transform: scale(15);
      }
    }




.v-main{
  overflow: hidden;
  position: relative;

  display: flex;
  flex-flow: column nowrap;
  align-items: left;
  padding: 20rpx 40rpx;

}

.v-main .time_left{
  font-size: 40rpx;
}
.v-main .target_days{
  color: #6BC235;
}
.v-main .target_headline{
  font-size:50rpx;
}
.v-main .small_info{
  display: inline-block;
}
.v-main .user_picture{
  width:40rpx;
  height: 40rpx;
  display: inline-block;
}
.v-main .user_name{
  
  font-size: 40rpx;
  
}